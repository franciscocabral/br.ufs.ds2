
<div class="portlet light">
  <div class="portlet-title">
    <div class="caption font-blue-sunglo">
      <span class="caption-subject bold uppercase">Comandas Ativas</span>
    </div>
    <div class="actions">
      <a class="btn green" data-toggle="modal" href="#nova-comanda">
        <i class="fa fa-plus-circle"></i>Nova Comanda
      </a>
    </div>
  </div>
  <div class="portlet-body">
    <div class="row">

      <% @comandas.each do |comanda|
          if comanda.dataEncerramento == nil
      %>
          <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="dashboard-stat blue">
              <div class="visual">
                <i class="fa fa-cutlery"></i>
              </div>
              <div class="details">
                <div class="number">
                  <span data-counter="counterup" data-value="<%= comanda.mesa %>"><%= comanda.mesa %></span>
                </div>
                <div class="desc"> Mesa</div>
              </div>
              <a class="more" href="/comandas/<%= comanda.idcomanda %>"> Mais Informações
                <i class="m-icon-swapright m-icon-white"></i>
              </a>
            </div>
          </div>
      <% end
      end%>


    </div>
  </div>
</div>

<div class="portlet light">
  <div class="portlet-title">
    <div class="caption font-blue-sunglo">
      <span class="caption-subject bold uppercase">Comandas Encerradas</span>
    </div>
  </div>
  <div class="portlet-body">
    <div class="row">

      <% @comandas.each do |comanda|
        if comanda.dataEncerramento != nil
      %>
              <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="dashboard-stat blue">
                  <div class="visual">
                    <i class="fa fa-cutlery"></i>
                  </div>
                  <div class="details">
                    <div class="number">
                      <span data-counter="counterup" data-value="<%= comanda.mesa %>"><%= comanda.mesa %></span>
                    </div>
                    <div class="desc"> Mesa</div>
                  </div>
                  <a class="more" href="/comandas/<%= comanda.idcomanda %>"> Mais Informações
                    <i class="m-icon-swapright m-icon-white"></i>
                  </a>
                </div>
              </div>
          <% end
             end%>


    </div>
  </div>
</div>

<div id="nova-comanda" class="modal fade" tabindex="-1" data-width="760" style="display: none; width: 760px; margin-left: -379px; margin-top: 0px;" aria-hidden="true">

  <%= form_tag('/comandas/create', method: "post", class:'form-horizontal') do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title">Cadastrar Comanda</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="form-body">
            <div class="col-md-12">
              <div class="form-group">
                <label class="col-md-3 control-label">Mesa</label>
                <div class="col-md-9">
                  <input name="comanda[mesa]" class="form-control"/>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <input type="submit" class="btn blue" value="Cadastrar"/>
      </div>
  <%end%>
</div>