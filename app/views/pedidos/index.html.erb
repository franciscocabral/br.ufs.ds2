<p id="notice"><%= notice %></p>

<h1>Listing Pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Idpedido</th>
      <th>Idfuncionario</th>
      <th>Idproduto</th>
      <th>Idcomanda</th>
      <th>Datapedido</th>
      <th>Datafinalizacao</th>
      <th>Cancelado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.idPedido %></td>
        <td><%= pedido.idFuncionario %></td>
        <td><%= pedido.idProduto %></td>
        <td><%= pedido.idcomanda %></td>
        <td><%= pedido.dataPedido %></td>
        <td><%= pedido.dataFinalizacao %></td>
        <td><%= pedido.cancelado %></td>
        <td><%= link_to 'Show', pedido %></td>
        <td><%= link_to 'Edit', edit_pedido_path(pedido) %></td>
        <td><%= link_to 'Destroy', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

