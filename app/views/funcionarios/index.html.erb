<h1>Listing Funcionarios</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th>Num</th>
      <th>Endereco</th>
      <th>Telefone</th>
      <th>Salario</th>
      <th>Datacontratacao</th>
      <th>Ativo</th>
      <th>Turno</th>
      <th>Login</th>
      <th>Password digest</th>
      <th>Nivelacesso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td><%= funcionario.nome %></td>
        <td><%= funcionario.cpf %></td>
        <td><%= funcionario.cidade %></td>
        <td><%= funcionario.estado %></td>
        <td><%= funcionario.num %></td>
        <td><%= funcionario.endereco %></td>
        <td><%= funcionario.telefone %></td>
        <td><%= funcionario.salario %></td>
        <td><%= funcionario.dataContratacao %></td>
        <td><%= funcionario.ativo %></td>
        <td><%= funcionario.turno %></td>
        <td><%= funcionario.login %></td>
        <td><%= funcionario.password_digest %></td>
        <td><%= funcionario.nivelAcesso %></td>
        <td><%= link_to 'Show', funcionario %></td>
        <td><%= link_to 'Edit', edit_funcionario_path(funcionario) %></td>
        <td><%= link_to 'Destroy', funcionario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

