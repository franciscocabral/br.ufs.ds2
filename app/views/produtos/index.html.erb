<p id="notice"><%= notice %></p>

<h1>Lista de Produtos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Valor</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.valor %></td>
        <td><%= produto.descricao %></td>
        	</td>
        <td align = "right"> <a href = <%= produto_show_path(produto)%>> <span class="glyphicon glyphicon-log-in" title="Detalhes"> </a></td>
        <td align = "center"> <a href = <%= produto_edit_path(produto)%>> <span class="glyphicon glyphicon-edit" title="Modificar"> </a></td>
        <td align = "center"> <a href = <%= produto_delete_path(produto)%>> <span class="glyphicon glyphicon-remove" title="Remover"> </a></td>

    <% end %>
  </tbody>
</table>

<br>

    <div class="actions">
      <a class="btn green" data-toggle="modal" href= <%=new_produto_path%>>
        <i class="fa fa-plus-circle"></i>Novo Produto
      </a>
    </div>