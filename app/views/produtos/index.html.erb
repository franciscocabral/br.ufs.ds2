<p id="notice"><%= notice %></p>

<div class="portlet-title">
    <div class="caption">
        <i class=" font-green-sharp"></i>
        <span class="caption-subject font-green-sharp bold uppercase"><h3>Lista de Produtos</h3> </span>
    </div>
</div>

<div class="portlet light ">
  <div class="portlet-body form">
  <form role="form">
    <div class="form-body">
      <div class="form-group">

        <table class="table table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Valor</th>
              <th>Descricao</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @produtos.each do |produto| %>
            <tr>
              <td><%= produto.nome %></td>
              <td><%= produto.valor %></td>
              <td><%= produto.descricao %></td>
        	    
              <td align = "right"> <a href = <%= produto_show_path(produto)%>> <span class="glyphicon glyphicon-log-in" title="Detalhes"> </a></td>
              <td align = "center"> <a href = <%= produto_edit_path(produto)%>> <span class="glyphicon glyphicon-edit" title="Modificar"> </a></td>
              <td align = "center"> <a href = <%= produto_delete_path(produto)%>> <span class="glyphicon glyphicon-remove" title="Remover"> </a></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </form>
  </div>
</div>

<br>
<div class="actions">
  <a class="btn green" data-toggle="modal" href= <%=produto_new_path%>>
    <i class="fa fa-plus-circle"></i>Novo Produto
  </a>
</div>
