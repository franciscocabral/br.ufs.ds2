<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cnpj</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th>Num</th>
      <th>Endereco</th>
      <th>Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% fornecedors.each do |fornecedor| %>
      <tr>
        <td><%= fornecedor.nome %></td>
        <td><%= fornecedor.cnpj %></td>
        <td><%= fornecedor.cidade %></td>
        <td><%= fornecedor.estado %></td>
        <td><%= fornecedor.num %></td>
        <td><%= fornecedor.endereco %></td>
        <td><%= fornecedor.telefone %></td>
        <td><%= link_to fornecedor do %>
          <span class="glyphicon glyphicon-log-in" title="Detalhes">
        <% end %></td>
        <td><%= link_to edit_fornecedor_path(fornecedor) do %>
          <span class="glyphicon glyphicon-edit" title="Modificar">
        <% end %></td>
        <td><%= link_to fornecedor, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span class="glyphicon glyphicon-remove" title="Remover">
        <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

