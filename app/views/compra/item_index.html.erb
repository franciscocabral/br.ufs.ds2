<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Marca</th>
      <th>Descricao</th>
      <th>Quantidade</th>
      <th>Quantidademinima</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.nome %></td>
        <td><%= item.marca %></td>
        <td><%= item.descricao %></td>
        <td><%= item.quantidade %></td>
        <td><%= item.quantidadeMinima %></td>
        <td><%= link_to 'Show', item_show_path(item) %></td>
        <td><%= link_to 'Edit', item_edit_path(item) %></td>
        <td><%= link_to 'Destroy', item_delete_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

