<p id="notice"><%= notice %></p>
<%= button_to "Cadastrar novo Item", item_new_path, :class => "button", :method => :get  %><br>
<%= button_to "Registrar compra de Itens", vende_new_path, :class => "button", :method => :get  %><br>
<%= button_to "Listar compras de itens", vende_index_path, :class => "button", :method => :get  %><br>
<h1>Lista de Itens</h1>
<table>
  <thead>
    <tr>
      <%@corFundo = "#4D5B69"%>
	  <th style="padding:0 0 0 15px; background-color: <%=@corFundo%>; color: white;">Nome</th>
      <th style="padding:0 0 0 15px; background-color: <%=@corFundo%>; color: white;">Marca</th>
      <th style="padding:0 0 0 15px; background-color: <%=@corFundo%>; color: white;">Quantidade</th>
      <th style="padding:0 0 0 15px; background-color: <%=@corFundo%>; color: white;">Alerta</th>
      <th style="padding:0 0 0 15px; background-color: <%=@corFundo%>; color: white;">Opcoes</th>
	  <th style="padding:0 0 0 15px; background-color: <%=@corFundo%>; color: white;"></th>
	  <th style="padding:0 0 0 15px; background-color: <%=@corFundo%>; color: white;"></th>
	  <th colspan="3"></th>
    </tr>
  </thead>
  <br>
  <tbody>
	<% @corFundo = []
	   @cor = []
	   @corFundo[0] = "#FFFFFF"
	   @cor[0] = "black"
	   @corFundo[1] = "#9CBCD3"
	   @cor[1] = "black"           #define as cores da tabela
	   @linha = 0
	   @coluna = 0
	%>
	<% @items.each do |item| %>
	  <% #indica a cor da tabela
		 if (@linha == 1)
           @coluna = 1
         else
		   @coluna = 0
		 end
		 
		 @linha = 1-@linha             #alterna as cores
	  %>
	  <tr>
        <td style="padding:0 15px; background-color: <%=@corFundo[@coluna]%>; color: <%=@cor[@coluna]%>;"><%= item.nome %></td><%@coluna = 1-@coluna%>
        <td style="padding:0 15px; background-color: <%=@corFundo[@coluna]%>; color: <%=@cor[@coluna]%>;"><%= item.marca %></td><%@coluna = 1-@coluna%>
        <td style="padding:0 15px; background-color: <%=@corFundo[@coluna]%>; color: <%=@cor[@coluna]%>;"><%= item.quantidade %></td><%@coluna = 1-@coluna%>
        <td style="padding:0 15px; background-color: <%=@corFundo[@coluna]%>; color: <%=@cor[@coluna]%>;">
		  <% if(item.quantidade <= item.quantidadeMinima) %><img src="/assets/Alerta.png" alt="Quantidade de item em estado critico" style="width:30px;height:30px;"><% end %>
		</td><%@coluna = 1-@coluna%>
        <td style="padding:0 15px; background-color: <%=@corFundo[@coluna]%>; color: <%=@cor[@coluna]%>;"><%= link_to 'Detalhes', item_show_path(item) %></td>
        <td style="padding:0 15px; background-color: <%=@corFundo[@coluna]%>; color: <%=@cor[@coluna]%>;"><%= link_to 'Alterar', item_edit_path(item) %></td>
        <td style="padding:0 15px; background-color: <%=@corFundo[@coluna]%>; color: <%=@cor[@coluna]%>;"><%= link_to 'Excluir', item_delete_path(item), method: :delete, data: { confirm: 'Voce tem certeza disso?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>
