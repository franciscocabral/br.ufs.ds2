<%= form_for(@item, url: item_show_path(@item)) do |f| %>
  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :marca %><br>
    <%= f.text_field :marca %>
  </div>
  <div class="field">
    <%= f.label :descrição %><br>
    <%= f.text_field :descricao %>
  </div>
  <div class="field">
    <%= f.label :quantidade %><br>
    <%= f.number_field :quantidade %>
  </div>
  <div class="field">
    <%= f.label "Quantidade Mínima" %><br>
    <%= f.number_field :quantidadeMinima %>
  </div>
  <br>
  <div class="actions">
	<%= f.submit "Salvar", :class => 'btn green' %>
  </div>
<% end %>
