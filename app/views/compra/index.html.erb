<p id="notice"><%= notice %></p>

<div class="portlet light">
	<div class="portlet-title">
		<div class="caption font-blue-sunglo">
			<span class="caption-subject bold uppercase">Lista de compras de itens</span>
		</div>
	</div>

	<table class="table table-hover">
		<thead>
			<tr>
				<th>Código</th>
				<th>Data</th>
				<th>Valor</th>
				<th>Opções</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @vendes.each do |vende| %>
				<tr>
					<td><%= vende.idVende %></td>
					<td><%= vende.data %></td>
					<td><%= vende.valor %></td>
					<td align = "right"> <a href = <%= vende_show_path(vende.idVende, vende.idFornecedor, vende.idItem)%>> <span class="glyphicon glyphicon-log-in" title="Detalhes"> </a></td>
					<td align = "center"> <a href = <%= vende_edit_path(vende.idVende, vende.idFornecedor, vende.idItem)%>> <span class="glyphicon glyphicon-edit" title="Modificar"> </a></td>
					<td align = "center"> <a href = <%= vende_delete_path(vende.idVende, vende.idFornecedor, vende.idItem)%>> <span class="glyphicon glyphicon-remove" title="Remover"> </a></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<br>
	<br>
	<%= button_to 'Voltar', item_index_path, :class => "btn btn-default", :method => :get  %><br>
</div>