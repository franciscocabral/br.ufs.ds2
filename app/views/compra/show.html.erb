<h1>Detalhes de compra</h1>
<br>

<p id="notice"><%= notice %></p>

<p>
  <strong>Código:</strong>
  <%= @vende.idVende %>
</p>

<p>
  <strong>Fornecedor:</strong>
  <%= Fornecedor.find(@vende.idFornecedor).nome %>
</p>

<p>
  <strong>Item:</strong>
  <%= (item = Item.find(@vende.idItem)).nome + " (" + item.marca + ")" %>
</p>

<p>
  <strong>Data:</strong>
  <%= @vende.data %>
</p>

<p>
  <strong>Valor:</strong>
  <%= @vende.valor %>
</p>
<br>

<%= button_to 'Modificar', vende_edit_path(@vende.idVende, @vende.idFornecedor, @vende.idItem), :class => "btn btn-default", :method => :get  %><br>
<%= button_to 'Voltar', vende_index_path, :class => "btn btn-default", :method => :get  %><br>

